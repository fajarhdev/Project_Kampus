<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".pusat_bantuan">
    
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Pusat bantuan"
        app:titleTextColor="@color/white"
        android:background="@color/blue"/>
    
    <androidx.cardview.widget.CardView
        android:layout_width="364dp"
        android:layout_height="392dp"
        android:elevation="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/emailcs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="projectpu@belajar.com"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nocs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailcs"
                android:text="(021) 1234 678"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/optxtcs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nocs"
                android:text="Jam operasional untuk melakukan telpon: "
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/jamcs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/optxtcs"
                android:text="Senin - Jumat: 08.00 WIB - 17.00 WIB "
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    
    <androidx.cardview.widget.CardView
        android:layout_width="364dp"
        android:layout_height="70dp"
        android:elevation="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="12px"
        android:onClick="faq">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="FAQ"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>
<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".profile">

<!--    TOOLBAR SECTION-->
<!--    <Toolbar-->
<!--        android:id="@+id/toolbar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:title="Akun"-->
<!--        android:background="@color/blue"-->
<!--        android:titleTextColor="@color/white"/>-->

<!--    PROFILE SECTION-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/profilepict"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/profile" />

<!--        NAME FIELDS-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profilepict"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:layout_marginTop="35dp"/>

<!--        EMAIL FIELDS-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:text="projectkampus@gmail.com"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textFontWeight="300"
            android:layout_marginTop="10dp"/>

<!--        STATUS FIELDS-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:text="Student"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textFontWeight="300"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

<!--    OPTION SECTION-->

<!--    OPTION EDIT PROFILE SECTION-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/editprofile"
                android:layout_width="364dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                app:cardCornerRadius="15sp"
                android:layout_marginTop="20dp"
                android:elevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_account_circle_36"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/editprofiletxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit profile"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textFontWeight="700"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--    OPTION RIWAYAT PENGERJAAN SECTION-->
            <androidx.cardview.widget.CardView
                android:id="@+id/riwayatpengerjaan"
                android:layout_width="364dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                app:cardCornerRadius="15sp"
                android:layout_marginTop="20dp"
                android:elevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_menu_book_36"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/riwayatpengerjaantxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Riwayat pengerjaan"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textFontWeight="700"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--    OPTION PILIH BAHASA SECTION-->
            <androidx.cardview.widget.CardView
                android:id="@+id/pilihbahas"
                android:layout_width="364dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                app:cardCornerRadius="15sp"
                android:layout_marginTop="20dp"
                android:elevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_translate_36"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/pilihbahasatxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih bahasa"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textFontWeight="700"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--    OPTION BANTUAN SECTION-->
            <androidx.cardview.widget.CardView
                android:id="@+id/bantuan"
                android:layout_width="364dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                app:cardCornerRadius="15sp"
                android:layout_marginTop="20dp"
                android:elevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_help_36"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26dp"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/bantuantxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pusat bantuan"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sign_out"
                android:layout_width="364dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:elevation="4dp"
                android:textSize="18sp"
                android:text="@string/logout"
                android:background="@drawable/button_style"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>



</androidx.appcompat.widget.LinearLayoutCompat>